        <!--#region  Arc-->
        <Path Name="NiddleArc" StrokeThickness="1" Stroke="Black">
            <Path.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.937"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Path.Fill>
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigureCollection>
                            <PathFigure StartPoint="190,210">
                                <PathFigure.Segments>
                                    <PathSegmentCollection>
                                        <ArcSegment Size="25,20" RotationAngle="0"
                                            IsLargeArc="True"
                                            SweepDirection="Clockwise"
                                            Point="240,210" />
                                    </PathSegmentCollection>
                                </PathFigure.Segments>
                            </PathFigure>
                        </PathFigureCollection>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>

        <!--#region Max Niddle-->
        <Polygon Name="MaxNiddle" Canvas.Left="0" Canvas.Top="0" RenderTransformOrigin="1,1">
